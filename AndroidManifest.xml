<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.inventory"
    android:versionCode="5"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher_web2"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.inventory.activity.InventoryActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.NoTitle" >
        </activity>
        <activity
            android:name="com.inventory.activity.SplashScreen"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Black.NoTitleBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity android:name="com.inventory.activity.SearchableActivity" >
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity
            android:name="com.inventory.activity.AddItemActivity"
            android:label="@string/app_name" 
            android:theme="@style/Theme.NoTitle"/>
        <activity
            android:name="com.inventory.activity.ViewItemActivity"
            android:label="@string/app_name" 
            android:theme="@style/Theme.NoTitle" 
            />
        <activity
            android:name="com.inventory.activity.AndroidDatabaseManager"
            android:label="@string/app_name" />

        <provider
            android:name="com.inventory.provider.MyContentProvider"
            android:authorities="com.inventory.provider.MyContentProvider" />
    </application>

</manifest>